<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="MauiApp4.MainPage">

    <ScrollView>
        <VerticalStackLayout
         Padding="30,0"
         Spacing="25">

            <Picker x:Name="itemPicker">
                <Picker.Items >
                    <x:String>Internista</x:String>
                    <x:String>Kardiolog</x:String>
                    <x:String>Dermatlog</x:String>
                    <x:String>Okulista</x:String>
                </Picker.Items>
            </Picker>

            <DatePicker x:Name="MyDatePicker"
                     Format="dd.MM.yyyy"
                     MinimumDate="{x:Static sys:DateTime.Today}"/>

            <TimePicker x:Name="MyTimePicker"
                     Format="HH:mm"/>

            <Button Text="Zarezerwuj"
                 Clicked="OnButtonClicked"/>

            <Label x:Name="ResultLabel"
                FontSize="18"/>

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
