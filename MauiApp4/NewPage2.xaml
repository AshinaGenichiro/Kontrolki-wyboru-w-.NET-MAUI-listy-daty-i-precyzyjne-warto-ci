<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp4.NewPage2"
             Title="NewPage2">
    <VerticalStackLayout>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"> 
            
        <Entry x:Name="nameSurnameEntry"
               Placeholder="Podaj swoje imię i nazwisko"/>
        <Entry x:Name="emailEntry"
               Placeholder="Podaj swój email"
               Keyboard="Email"/>
            <Picker x:Name="itemPicker">
                <Picker.Items >
                    <x:String>Google</x:String>
                    <x:String>Tesla</x:String>
                    <x:String>Bmw</x:String>
                    <x:String>Meta</x:String>
                    <x:String>XTB</x:String>
                    <x:String>Inna</x:String>
                </Picker.Items>
            </Picker>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <DatePicker x:Name="MyDatePicker"
                        Format="dd.MM.yyyy"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>